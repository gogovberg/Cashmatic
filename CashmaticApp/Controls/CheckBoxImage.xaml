<UserControl x:Class="CashmaticApp.Controls.CheckBoxImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashmaticApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="220">
    <Grid>
        <Border x:Name="bdrOutsideBorder" MouseUp="EventBorder_MouseUp" MouseDown="EventBorder_MouseDown"  Background="#FFFFFFFF" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"></ColumnDefinition>
                    <ColumnDefinition Width="30*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image x:Name="imgFlag" Margin="15" Grid.Column="0"></Image>
                <TextBlock x:Name="tblLanguage" Grid.Column="1"  FontWeight="Medium" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="26" Foreground="#FFB3B3B3"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
