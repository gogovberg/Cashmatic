<Page x:Class="CashmaticApp.Pages.PaymentSummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CashmaticApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1024"  Style="{StaticResource CashierPageStyle}"
      Title="PaymentSummaryPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Style="{StaticResource DataGridSummary}"  x:Name="dtSummary" Grid.Row="0" Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTextColumn Width="60*"  Header="{DynamicResource titleItem}" Binding="{Binding Path=ItemName}"></DataGridTextColumn>
                <DataGridTextColumn Width="20*"  Header="{DynamicResource titlePrice}" Binding="{Binding Path=ItemPrice}"></DataGridTextColumn>
                <DataGridTextColumn Width="20*"  Header="{DynamicResource titleQty}" Binding="{Binding Path=ItemQty}"></DataGridTextColumn>
                <DataGridTextColumn Width="20*"  Header="{DynamicResource titleTotal}" Binding="{Binding Path=ItemTotal}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Grid.Row="1">
            <Button x:Name="btnBack" Margin="10" Width="108"   Content="Back" FontSize="24" Background="#FFFAFAFA"  Foreground="#FF36669C"  Click="btnBack_Click" >
                <Button.BitmapEffect>
                    <DropShadowBitmapEffect ShadowDepth="1" Direction="315" />
                </Button.BitmapEffect>
            </Button>
            <CheckBox x:Name="en"  Style="{StaticResource ChecBoxLanguageImgStyle}" Checked="Language_checked">
                <Image x:Name="enImg" ></Image>
            </CheckBox>
            <CheckBox x:Name="de"  Style="{StaticResource ChecBoxLanguageImgStyle}" Checked="Language_checked">
                <Image x:Name="deImg" ></Image>
            </CheckBox>
            <CheckBox x:Name="si" Style="{StaticResource ChecBoxLanguageImgStyle}" Checked="Language_checked">
                <Image x:Name="siImg" ></Image>
            </CheckBox>
            <CheckBox x:Name="hu"  Style="{StaticResource ChecBoxLanguageImgStyle}" Checked="Language_checked">
                <Image x:Name="huImg" ></Image>
            </CheckBox>
            <CheckBox x:Name="cz"  Style="{StaticResource ChecBoxLanguageImgStyle}" Checked="Language_checked">
                <Image x:Name="czImg" ></Image>
            </CheckBox>
            <CheckBox x:Name="sk"  Style="{StaticResource ChecBoxLanguageImgStyle}" Checked="Language_checked">
                <Image  x:Name="skImg" ></Image>
            </CheckBox>
        </WrapPanel>
        <Border Grid.RowSpan="2" Grid.Column="1" x:Name="bdrPrice" Style="{StaticResource PriceSummaryStyle}" >
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Direction="45" />
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="85*"></RowDefinition>
                    <RowDefinition Height="40*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Border BorderBrush="White" BorderThickness="0,0,0,2" Margin="10" >
                        <TextBlock x:Name="tblPaymentSummary" Text="{DynamicResource paymentSummary}" FontWeight="SemiBold" FontSize="26" Foreground="White" Margin="10" ></TextBlock>
                    </Border>
                    <WrapPanel Margin="10,0,10,0">
                        <TextBlock x:Name="tblDateTimeIn" Text="{DynamicResource checkInDate}" FontWeight="Regular"  FontSize="20" Foreground="#B2FFFFFF" Margin="10" ></TextBlock>
                        <TextBlock x:Name="tblDateTimeInValue" Text="3.2.2018 14:30" FontWeight="SemiBold"  FontSize="20" Foreground="#B2FFFFFF" Margin="10" ></TextBlock>
                    </WrapPanel>
                    <Border BorderBrush="White" BorderThickness="0,0,0,1" Margin="10,0,10,10">
                        <WrapPanel >
                            <TextBlock x:Name="tblDateTimeOut" Text="{DynamicResource checkOutDate}" FontWeight="Regular"  FontSize="20" Foreground="#B2FFFFFF" Margin="10" ></TextBlock>
                            <TextBlock x:Name="tblDateTimeOutValue" Text="8.2.2018 01:16" FontWeight="SemiBold"  FontSize="20" Foreground="#B2FFFFFF" Margin="10" ></TextBlock>
                        </WrapPanel>
                    </Border>
                    <WrapPanel Margin="10,0,10,0">
                        <TextBlock x:Name="tblBasePrice" Text="{DynamicResource basePrice}" Style="{StaticResource PaymentTextBlockStyle}"></TextBlock>
                        <TextBlock x:Name="tblBasePriceValue" Text="101.96$" Style="{StaticResource PaymentTextBlockStyle}"></TextBlock>
                    </WrapPanel>
                    <WrapPanel Margin="10,0,10,0">
                        <TextBlock x:Name="tblVatOne" Text="{DynamicResource vat1}" Style="{StaticResource PaymentTextBlockStyle}"></TextBlock>
                        <TextBlock x:Name="tblVatOneValue" Text="12.58$" Style="{StaticResource PaymentTextBlockStyle}"></TextBlock>
                    </WrapPanel>
                    <WrapPanel Margin="10,0,10,0">
                        <TextBlock x:Name="tblVatTwo" Text="{DynamicResource vat2}" Style="{StaticResource PaymentTextBlockStyle}"></TextBlock>
                        <TextBlock x:Name="tblVatTwoValue" Text="30.04$" Style="{StaticResource PaymentTextBlockStyle}"></TextBlock>
                    </WrapPanel>
                    <Border BorderThickness="0,1,0,0" BorderBrush="White" Margin="10">
                        <WrapPanel >
                            <TextBlock x:Name="tblTotal" Text="{DynamicResource totalOrder}"  VerticalAlignment="Center"  Style="{StaticResource PaymentTextBlockStyle}"></TextBlock>
                            <TextBlock x:Name="tblTotalValue" Text="132.00$" Foreground="White" FontWeight="Regular" VerticalAlignment="Bottom"  FontSize="40" Margin="10,0,0,10"></TextBlock>
                        </WrapPanel>
                    </Border>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <Button x:Name="btnPayCash" Background="#FF29A26A" Width="320" Height="70" Content="{DynamicResource payCash}"  Style="{StaticResource PaymentButtons}" Click="btnPayCash_Click" />
                    <Button x:Name="btnPayCard" Background="#FF2576F1" Width="320" Height="70" Content="{DynamicResource payCard}" Style="{StaticResource PaymentButtons}" Click="btnPayCard_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
